/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@environments/*": [
        "./src/environments/*"
      ],
      "@api/*": [
        "./src/app/api/*"
      ],
      "@auth/*": [
        "./src/app/auth/*"
      ],
      "@constants/*": [
        "./src/app/constants/*"
      ],
      "@utils/*": [
        "./src/app/utils/*"
      ],
      "@services/*": [
        "./src/app/services/*"
      ],
       "@project/*": [
        "./src/app/project/*"
      ],
      "@operator/*": [
        "./src/app/operator/*"
      ],
      "@grammar/*": [
        "./src/app/grammar/*"
      ],
      "@guards/*": [
        "./src/app/guards/*"
      ],
      "@pages/*": [
        "./src/app/pages/*"
      ],
      "@modals/*": [
        "./src/app/modals/*"
      ],
       "@detect/*": [
        "./src/app/detect/*"
      ],
       "@train/*": [
        "./src/app/train/*"
      ],
         "@home/*": [
        "./src/app/home/*"
      ],
       "@play/*": [
        "./src/app/play/*"
      ],
       "@record/*": [
        "./src/app/record/*"
      ],
      "@models/*": [
        "./src/app/models/*"
      ]
    },
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
